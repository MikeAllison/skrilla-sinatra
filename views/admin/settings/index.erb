<div class="row" style="margin-bottom: 1rem;">
  <div class="col-sm-1 col-md-8 offset-md-2">
    <h3>Database Stats</h3>
    <table class="table table-striped table-dark">
      <thead>
      </thead>
      <tbody>
        <% @db_stats.each do |name, value| %>
          <tr <%= 'class="bg-info"' if name == :"Total Rows" %>><td><%= name %></td><td class="text-right"><%= value %></td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row" style="margin-bottom: 1rem;">
  <div class="col-sm-1 col-md-8 offset-md-2">
    <h3>Server Info</h3>
    <table class="table table-striped table-dark">
      <thead>
      </thead>
      <tbody>
        <tr><td>Time:</td><td class="text-right"><%= Time.now %></td></tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row" style="margin-bottom: 1rem;">
  <div class="col-sm-1 col-md-8 offset-md-2">
    <h3>Accounts</h3>
    <table class="table table-striped table-dark">
      <thead>
      </thead>
      <tbody>
        <% @accounts.each do |account| %>
          <tr><td><%= account.name %></td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row" style="margin-bottom: 1rem;">
  <div class="col-sm-1 col-md-8 offset-md-2">
    <h3>User Accounts</h3>
    <table class="table table-striped table-dark">
      <thead>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
