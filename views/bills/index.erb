<h2>Bills</h2>

<table class="ui striped table">
  <thead>
    <tr>
      <th>Next Payment Date</th>
      <th>Amount</th>
      <th>Description</th>
      <th>Frequency</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td>To-Do</td>
        <td>To-Do</td>
        <td><%= bill.description %></td>
        <td><%= bill.bill_frequency.name %></td>
        <td>
          <div class="ui vertical animated basic button" tabindex="-1">
            <div class="hidden content">Paid</div>
            <div class="visible content">
              <a href="/bills/<%= bill.id %>/mark-as-paid">
                <i class="money bill alternate outline icon"></i>
              </a>
            </div>
          </div>
          <div class="ui vertical animated basic button" tabindex="-1">
            <div class="hidden content">Edit</div>
            <div class="visible content">
              <a href="/bills/<%= bill.id %>/edit">
                <i class="edit icon"></i>
              </a>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
