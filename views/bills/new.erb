<h2 class="ui dividing header">Add a Bill</h2>

<form method="post" class="ui form">
  <div class="field">
    <label for="description">Description</label>
    <input type="text" id="description" name="description" class="form-control" placeholder="Description">
  </div>
  <div class="field">
    <label>Merchant</label>
    <div class="ui fluid search selection dropdown">
      <input type="hidden" id="merchant_id" name="merchant_id">
      <i class="dropdown icon"></i>
      <div class="default text">Select Merchant</div>
      <div class="menu">
        <div class="item"><a href="/merchants">Add a Merchant</a></div>
        <div class="divider"></div>
        <% @merchants.each do |merchant| %>
          <div class="item" data-value="<%= merchant.id %>"><%= merchant.name %></div>
        <% end %>
      </div>
    </div>
  </div>
  <div id="bill_frequency_dropdown" class="field">
    <label>Frequency</label>
    <select id="bill_frequency" name="bill_frequency" class="ui dropdown">
      <option value="once">Once</option>
      <option value="weekly">Weekly</option>
      <option value="bi-weekly">Bi-Weekly</option>
      <option value="monthly">Monthly</option>
      <option value="yearly">Yearly</option>
    </select>
  </div>
  <div class="field">
    <label for="starting-date">Starting Date</label>
    <input type="date" id="starting-date" name="starting-date" class="form-control">
  </div>
  <div class="field">
    <label for="ending-date">Ending Date</label>
    <input type="date" id="ending-date" name="ending-date" class="form-control">
  </div>
  <div class="field">
    <label for="amount">Amount</label>
    <input type="text" id="amount" name="amount" class="form-control" placeholder="0.00">
  </div>
  <div class="field">
    <label style="margin-bottom:14px;">Credit?</label>
    <div class="ui slider checkbox">
      <input type="checkbox" id="credit" name="credit" tabindex="0" class="hidden">
      <label for="credit"></label>
    </div>
  </div>
  <div id="account_dropdown" class="field">
    <label>Account</label>
    <div class="ui fluid search selection dropdown">
      <input type="hidden" id="account_id" name="account_id">
      <i class="dropdown icon"></i>
      <div class="default text">Select Account</div>
      <div class="menu">
        <div class="item"><a href="/accounts">Add an Account</a></div>
        <div class="divider"></div>
        <% @accounts.each do |account| %>
          <div class="item" data-value="<%= account.id %>"><%= account.name %></div>
        <% end %>
      </div>
    </div>
  </div>

  <button type="submit" class="ui button">Submit</button>
  <a href="/bills" class="ui button">Cancel</a>
</form>

<script src="/js/bills/edit.js"></script>
<script>
  $(function() {
    $('.ui.dropdown').dropdown();
  });
</script>
