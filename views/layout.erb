<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>Skrilla</title>
    <!-- <link rel="stylesheet" href="/css/bootstrap.min.css"> -->
    <link rel="stylesheet" href="/semantic/semantic.min.css">
  </head>
  <body>
    <div class="ui container">
      <!-- Navbar -->
      <% if @logged_in_user %>
        <div class="ui inverted pointing menu">
          <div class="header item">Skrilla</div>
          <a href="/accounts" class="item <%= 'active' if request.path.match(/\A\/accounts/) %>">Accounts</a>
          <a href="/bills" class="item <%= 'active' if request.path.match(/\A\/bills/) %>">Bills</a>
          <a href="/logout" class="item">Logout</a>
        </div>
      <% end %>
      <!-- Navbar End-->

      <%= yield %>

      <!-- Modal -->
      <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="modalLabel"><%= session[:message][:heading] if session[:message] %></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <%= session[:message][:body] if session[:message] %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
      <!-- Modal End -->
    </div>

    <script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/semantic/semantic.min.js"></script>
    <% if session[:message] %>
      <script type="text/javascript">
        $(function() {
          $('#modal').modal('show');
        });
        <% session[:message] = nil %>
      </script>
    <% end %>
  </body>
</html>
