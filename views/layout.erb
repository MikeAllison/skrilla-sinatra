<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>Skrilla</title>
    <link rel="stylesheet" href="/semantic/semantic.min.css">
    <link rel="stylesheet" href="/css/custom.css">
    <script src="/js/jquery-3.4.1.min.js"></script>
  </head>
  <body>
    <div class="ui container">
      <!-- Navbar -->
      <% if @logged_in_user %>
        <div class="ui inverted menu" style="background: #198f35;margin-bottom:30px;">
          <div class="header item">Skrilla</div>
          <a href="/accounts" class="item <%= 'active' if request.path.match(/\A\/accounts/) %>">Accounts</a>
          <a href="/bills" class="item <%= 'active' if request.path.match(/\A\/bills/) %>">Bills</a>
          <a href="/cash-flow" class="item <%= 'active' if request.path.match(/\A\/cash-flow/) %>">Cash Flow</a>
          <a href="/merchants" class="item <%= 'active' if request.path.match(/\A\/merchants/) %>">Merchants</a>
          <a href="/logout" class="item">Logout</a>
        </div>
      <% end %> <!-- Navbar End-->

      <%= yield %>

      <!-- Modal -->
      <div id="modal" class="ui basic modal">
        <i class="close icon"></i>
        <div class="header"><%= session[:message][:heading] if session[:message] %></div>
        <div class="content">
          <p><%= session[:message][:body] if session[:message] %></p>
        </div>
        <div class="actions">
          <div class="ui green ok inverted button">
            <i class="checkmark icon"></i>Close
          </div>
        </div>
      </div> <!-- Modal End -->
    </div> <!-- Container End -->

    <script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/semantic/semantic.min.js"></script>
    <script src="/js/layout.js"></script>

    <!-- Launch Modal -->
    <% if session[:message] %>
      <script type="text/javascript">
        $(function() {
          $('#modal').modal('show');
        });
      </script>
      <% session[:message] = nil %>
    <% end %>
  </body>
</html>
